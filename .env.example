# Copy this file to `.env` and fill values before running the server

# MongoDB credentials
MONGO_USER=
MONGO_PASS=

# JWT
JWT_SECRET=
JWT_EXPIRE=7d

# Server settings
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173
PLATFORM_FEE_PERCENTAGE=5

# Firebase service account (base64 encoded JSON) or set via a secret manager
# Example: export FIREBASE_SERVICE_KEY=$(base64 -w0 serviceAccount.json)
FIREBASE_SERVICE_KEY=

# Stripe secret key (required for payments)
STRIPE_SECRET_KEY=

# DO NOT COMMIT real secrets to the repository. Use environment variables in CI/deployment.
